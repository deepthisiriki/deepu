#include <stdio.h>

void main() {

    /* Any problems with the variables? */
        
    int i, lim, fact = 1;
    float sum = 0.0, term;
    
    printf("Enter the limit for the sum of series: ");
    scanf("%d", &lim);
    
    /* Any problems in the loop? */
    
    for (i = 1; i <= lim; i++) {
        fact *= i;
        term = 1 / fact;
        sum += fact; 
    }

    printf ("%f is the sum of the series\n", sum);
}
