#include<stdio.h>
void main()
{
char ch='A',ch1='a';
int i,j,n;
printf("enter no of charcters");
scanf("%d",&n);
for(i=1;i<=n;i++)
{
printf("\n");
for(j=1;j<=i;j++)
{
printf("%2c%c",ch,ch1);
ch++;
ch1++;	
}	}	
}
output:
